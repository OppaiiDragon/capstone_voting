# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=root
DB_PORT=3306
DB_NAME=voting_system
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRY=3600000
PASSWORD_RESET_BASE_URL=http://localhost:5173

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DESTINATION=uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@votingsystem.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Production Configuration
PRODUCTION_DB_HOST=your-production-db-host
PRODUCTION_DB_USER=your-production-db-user
PRODUCTION_DB_PASSWORD=your-production-db-password
PRODUCTION_DB_NAME=voting_system_prod

# SSL Configuration (for production)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Redis Configuration (for session storage in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_PORT=3001

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Vercel Blob Storage (for image uploads)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here 